<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%=raw @post.content %>
</p>

<hr>

<ul class='pl-4'>
  <% @post.content.scan(/(<img(?:.+?)>)/).flatten.each do | image | %>
    <li><%= image %></li>
  <% end %>
</ul>

<hr>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
